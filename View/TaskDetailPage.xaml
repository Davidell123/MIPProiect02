<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:MIPProiect02.ViewModels"
             x:Class="MIPProiect02.Views.TaskDetailPage"
             x:DataType="viewmodels:TaskDetailViewModel"
             Title="Adaugă Sarcină Nouă">

    <VerticalStackLayout Padding="20" Spacing="20">
        <Label Text="Ce ai de făcut?" 
               FontSize="24" 
               FontAttributes="Bold" />

        <Entry Placeholder="Introduceți titlul sarcinii..."
               Text="{Binding TaskTitle}"
               FontSize="18" />

        <Button Text="Salvează Sarcina"
                Command="{Binding SaveTaskCommand}"
                BackgroundColor="#512BD4"
                TextColor="White"
                HeightRequest="50"
                CornerRadius="10"
                Margin="0,20,0,0" />
    </VerticalStackLayout>
</ContentPage>